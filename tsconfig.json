{
    "compilerOptions": {
      "jsx": "react-jsx",
      "target": "es5",
      "outDir": "lib",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "declaration": true,
      "declarationDir": "lib",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"],
        "@components/*": [
        "components/*"
      ],
    }
    },
    "include": [
      "src"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ],
  }
